# ====================================
# Environment Configuration Template
# ====================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Supabase / PostgreSQL
POSTGRES_HOST=supabase-db
POSTGRES_PORT=5432
POSTGRES_DB=warmup
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-to-a-strong-password

# Supabase Keys (generate with: openssl rand -base64 32)
SUPABASE_URL=http://supabase-kong:8000
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# Backend
BACKEND_PORT=4000
NODE_ENV=production

# Encryption Key for stored credentials (MUST be at least 32 characters)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=change-me-to-32-char-encryption!

# Groq AI API Key (get from https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_NAME=Email Warm-Up Platform
